  Cal.ns.online("floatingButton", { 
    "calLink": calLink, 
    "config": { "layout": layout }, 
    "buttonText": buttonText 
  });
  Cal.ns.online("ui", { 
    "hideEventTypeDetails": false, 
    "layout": layout 
  });
</script>