<div id="cal-floating-button"></div>

<!-- Client-side script -->
<script type="text/javascript" define:vars={{ calLink, buttonText, layout }}>
  (function (C, A, L) { 
    let p = function (a, ar) { a.q.push(ar); }; 
    let d = C.document; 
